</p>

<table id="customerTable" class="table table-striped table-bordered">

    <thead>
        <tr>
            <td>Name</td>
            <td>Functions</td>
        </tr>
        @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @customer.Name
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = customer.Id })    |
                        @Html.ActionLink("Delete", "Delete", new { id = customer.Id })
                    </td>
                    
                </tr>
            }
    </thead>
</table>
